<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HÌNH THỨC ĐÀO TẠO"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvChooseLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHỌN TRÌNH ĐỘ"
        android:layout_marginTop="16dp" />

    <RadioGroup
        android:id="@+id/rgLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbRemote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đại học từ xa" />

        <RadioButton
            android:id="@+id/rbCollege"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cao đẳng" />

        <RadioButton
            android:id="@+id/rbUniversity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đại học chính quy" />

        <RadioButton
            android:id="@+id/rbPostgraduate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sau đại học" />
    </RadioGroup>

    <TextView
        android:id="@+id/tvChooseSubjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn các môn học"
        android:layout_marginTop="16dp" />

    <CheckBox
        android:id="@+id/cbJava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lập trình Java" />

    <CheckBox
        android:id="@+id/cbDatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lập trình cơ sở dữ liệu" />

    <CheckBox
        android:id="@+id/cbWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lập trình web" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="16dp" />

</LinearLayout>
